<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/file_fragment_main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:showDividers="end"
        android:layout_gravity="top"
        android:gravity="top"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/file_bar_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/ripple_bg"
            android:src="@mipmap/ic_back_black_48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/file_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="jobsnaps"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black_"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/lightgray"
            android:id="@+id/view" />


    </RelativeLayout>

    <com.yydcdut.sdlv.SlideAndDragListView
        android:id="@+id/frg_file_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.yydcdut.sdlv.SlideAndDragListView>
</LinearLayout>