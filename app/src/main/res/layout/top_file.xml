<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:showDividers="end"
    android:layout_gravity="top"
    android:gravity="top"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/file_bar_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/ripple_bg"
        android:src="@mipmap/ic_back_black_48dp"
        android:layout_alignTop="@+id/file_bar_pase"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/file_bar_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ripple_bg"
        android:src="@mipmap/ic_add_black_128dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:id="@+id/file_bar_pase"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="28dp"
        android:visibility="invisible"
        android:background="@drawable/ripple_bg"
        android:src="@mipmap/ic_pase_black_48dp"
        android:layout_alignTop="@+id/file_bar_add"
        android:layout_toStartOf="@+id/file_bar_add"
        android:layout_marginEnd="26dp" />

<!--    <ImageView
        android:id="@+id/file_op_bar_cut"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/ripple_bg"
        android:src="@mipmap/ic_cut_black_48dp"
        android:layout_alignTop="@+id/file_op_bar_move"
        android:layout_toStartOf="@+id/file_op_bar_move"
        android:layout_marginEnd="26dp" />-->
        <TextView
            android:id="@+id/file_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="jobsnaps"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black_"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightgray"
        android:id="@+id/view" />


</RelativeLayout>
</LinearLayout>
