<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:showDividers="end"
            android:layout_gravity="top"
            android:gravity="top"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/cat_bar_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/ic_back_black_48dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/cat_bar_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/ic_image_black_128dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />


 <!--           <ImageView
                android:id="@+id/cat_bar_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/ic_add_black_128dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp" />-->


            <TextView
                android:id="@+id/cat_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="jobsnaps"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black_"
                android:layout_above="@+id/view"
                android:layout_toEndOf="@+id/cat_bar_back" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/lightgray"
                android:id="@+id/view" />

        </RelativeLayout>


    <com.yydcdut.sdlv.SlideAndDragListView
        android:id="@+id/cat_file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    </com.yydcdut.sdlv.SlideAndDragListView>


    <!--广告-->
 <!--   <include layout="@layout/layout_ad_bottom"  />-->

</LinearLayout>
