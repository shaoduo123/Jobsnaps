<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reg_login_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="注册与登陆"
        android:textStyle="bold"
        android:textColor="@color/black_"
        android:textSize="18sp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="输入您工作的邮箱"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_below="@+id/reg_login_tv"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/log_reg_username_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="怎么称呼您"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/log_reg_next_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="继续"
        android:textColor="@color/white"
        android:background="@color/gray_8f"
        android:layout_below="@+id/log_reg_username_tv"
        android:layout_alignStart="@+id/log_reg_username_tv"
        android:layout_alignEnd="@+id/log_reg_username_tv" />


</RelativeLayout>
