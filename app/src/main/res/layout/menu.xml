<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_deep"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/gray_deep_second">
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/gray_deep_second"/>-->
        <ImageView
            android:id="@+id/pig_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/pig"
            android:layout_centerInParent="true"
            android:layout_marginStart="91dp" />

    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="@color/gray_deep"
        android:textColor="@color/white"
        android:text="我的"
        />
    </LinearLayout>
    <!--升级VIP-->
    <LinearLayout
        android:id="@+id/menu_vip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_tr"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@mipmap/ic_vip_wite_48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="15sp"
            android:text="升级到VIP"
            android:textColor="@color/white"/>
    </LinearLayout>
